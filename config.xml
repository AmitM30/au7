<?xml version='1.0' encoding='utf-8'?>
<widget id="com.madap.wadi.io" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Au7</name>
    <description>Lightweight Mobile App Development Platform</description>
    <author email="mangalamitash@gmail.com" href="http://doodle.studio">Amit Mangal</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <access origin="*" />
    <access origin="http://*.wadi.com" />
    <access origin="https://*.wadi.com" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="iosExtraFilesystems" value="library,library-nosync,documents,documents-nosync,cache,bundle,root" />
    <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,assets,root" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#0FB0AA" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <preference name="AllowBackForwardNavigationGestures" value="true" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.1" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="ios" spec="~4.5.4" />
</widget>
